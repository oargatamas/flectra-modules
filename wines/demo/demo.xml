    <record model="ir.actions.act_window" id="wines_list_action">
        <field name="name">Szőlőátvételi munkalapok</field>
        <field name="res_model">wines.szoloatvet</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Hozza létre az első szőlőátvételi lapot.
            </p>
        </field>
    </record>

     <record model="ir.ui.view" id="wines_szoloatvet_form_view">
        <field name="name">szoloatvet.form</field>
        <field name="model">wines.szoloatvet</field>
        <field name="arch" type="xml">
            <form string="Szőlőátvételi Munkalap">
                <sheet>
                    <group string="Azonosító adatok">
                        <field name="name" widget="selection"/>
                        <field name="amount"/>
                        <field name="mazsajegy"/>
                    </group>
                    <group string="Technikai adatok">
                        <field name="mustfok"/>
                        <field name="quality" widget="selection"/>
                        <field name="addon"/>
                    </group>
                    <group string="Rendelési adatok">
                        <field name="vendor"/>
                        <field name="create_date" widget="date" string="Rendelés dátuma"/>
                    </group>
                    <notebook>
                        <page string="Megjegyzés">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- top level menu: no parent -->
    <menuitem id="main_wines_menu" name="Wines"/>
    <!-- A first level in the left side menu is needed
         before using action= attribute -->
    <menuitem id="wines_szoloatvetel_sub" name="Szőlőátvétel"
              parent="main_wines_menu" action="wines_list_action"/>

